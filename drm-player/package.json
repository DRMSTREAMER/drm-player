{
    "name": "drm-player",
    "version": "1.0.0",
    "description": "DRM Video Player with Widevine and ClearKey support",
    "main": "main.js",
    "scripts": {
        "start": "electron .",
        "build": "electron-builder",
        "build:win": "electron-builder --win",
        "build:mac": "electron-builder --mac",
        "build:linux": "electron-builder --linux"
    },
    "keywords": [
        "drm",
        "widevine",
        "video",
        "player",
        "dash",
        "mpd"
    ],
    "author": "DRM Player",
    "license": "MIT",
    "devDependencies": {
        "electron": "^28.0.0",
        "electron-builder": "^24.0.0"
    },
    "dependencies": {
        "shaka-player": "^4.7.0"
    },
    "build": {
        "appId": "com.drm.player",
        "productName": "DRM Player",
        "directories": {
            "output": "dist"
        },
        "win": {
            "target": "nsis",
            "icon": "assets/icon.ico"
        },
        "mac": {
            "target": "dmg",
            "icon": "assets/icon.icns"
        },
        "linux": {
            "target": "AppImage",
            "icon": "assets/icon.png"
        }
    }
}